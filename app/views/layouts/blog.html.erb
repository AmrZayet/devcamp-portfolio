<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= @page_title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>

    <meta name="keywords" content="<%= @seo_keywords %>">

    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "blogs", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <!-- start of nav -->
    <%= render "shared/blog_nav" %>
    <!-- end of nav -->

    <!-- start of blog header -->
    <%= render "shared/blog_masthead" %>
    <!-- end of blog header -->


    <!-- start of container and row element -->
    <div class="container">

      <div class="row">
        <!-- start of container and row element -->


        

        <%= yield %>

        <!-- start of sidebar -->
        <%= render "shared/blog_sidebar" %>
        <!-- end of sidebar -->
      </div>

        <!-- start of footer -->
        <%= render "shared/blog_footer" %>
        <!-- end of footer -->


        <%= source_helper("blog") %>

    </div>
    <!-- end of container -->

  </body>
</html>
